{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "react-app"
    ],
    "overrides": [
        {
            "files": [
                "**/*.stories.js",
                "**/*.stories.ts",
                "**/*.stories.tsx"
            ],
            "rules": {
                "import/no-anonymous-default-export": "off"
            }
        }
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "@typescript-eslint/camelcase": 0,
        "@typescript-eslint/explicit-function-return-type": [
            0,
            {
                "allowTypedFunctionExpressions": true
            }
        ],
        "@typescript-eslint/explicit-member-accessibility": 0,
        "@typescript-eslint/indent": [
            "warn"
        ],
        "@typescript-eslint/no-redeclare": "off",
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "indent": "off",
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "no-redeclare": "off",
        "no-use-before-define": [
            0,
            {
                "functions": false,
                "classes": false,
                "variables": false
            }
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}